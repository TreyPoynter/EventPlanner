@model List<Event>
@{
    ViewBag.Title = "Current Events";
}

<div class="jumbotron-container mb-3" id="jumbotron">
    <div class="jumbotron-background balloons"></div>
    <div class="jumbotron-overlay"></div>
    <div class="jumbotron-text">
        <p class="display-2">View Events Here</p>
        <form>
            <div class="searchBox">
                <input class="searchInput" type="text" name="" placeholder="Search for a great time">
                <button class="searchButton" href="#">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="d-flex justify-content-between row">
        @foreach(Event eventItem in Model)
        {
            <div class="col-lg-5 mb-3">
                <a class="card" asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.EventId">
                    <div class="card-img-container mb-0">
                        <img src="~/eventImages/headers/@eventItem.EventBanner" class="card-img-top h-100" alt="..." />
                    </div>
                    <div class="card-body">
                        <p class="mb-0 d-flex">
                            <svg class="w-6 h-6 text-gray-800 dark:text-white me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                                <path fill-rule="evenodd" d="M6 5V4a1 1 0 1 1 2 0v1h3V4a1 1 0 1 1 2 0v1h3V4a1 1 0 1 1 2 0v1h1a2 2 0 0 1 2 2v2H3V7a2 2 0 0 1 2-2h1ZM3 19v-8h18v8a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2Zm5-6a1 1 0 1 0 0 2h8a1 1 0 1 0 0-2H8Z" clip-rule="evenodd" />
                            </svg>

                            @eventItem.StartTime.Value.ToString("MMMM d yyyy @h:mm tt")
                        </p>
                        <h5 class="card-title fw-bold mb-0">@eventItem.Name</h5>
                        <p class="mb-1">
                            @(eventItem.Description.Length <= 30 ? eventItem.Description : 
                                eventItem.Description.Substring(0, 45).Trim() + "...")
                        </p>
                         @*<p class="mb-0"><i class="fa-solid fa-users"></i> 4 interested</p>*@
                    </div>
                </a>
            </div>
        }
    </div>
</div>

